{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} | Ajouter un site
{% endblock %}

{% block body %}
    <h1 class="is-size-3 is-size-1-tablet has-text-centered my-5">Ajouter un site</h1>

    <div class="content">
        <div class="columns mx-2">
            <div class="column is-three-fifths is-offset-one-fifth">

                {{ form_start(siteForm) }}

                <div class="field">
                    <label class="label">Nom du site</label>
                    <div class="control">
                        {{ form_widget(siteForm.name, {'attr': {'class': 'input'}}) }}
                    </div>
                </div>

                <div class="has-text-centered">
                    <button class="button is-info">Ajouter</button>
                    <a href="javascript:history.go(-1)" class="button is-info">Retour</a>
                </div>

                {{ form_end(siteForm) }}

            </div>
        </div>
    </div>


{% endblock %}